<!DOCTYPE html>
<html>
<head>
  <title>Snapshifts</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body class="<%= controller_name %> <%= action_name%>" >

  <nav id="topnav" class="navbar navbar-inverse navbar-fixed-top bs-docs-nav">
    <div class="container">
        <div class="navbar-header pull-left">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <%= link_to '', root_path, class: 'snapshiftslogo hidden-xs' %>
        </div>
        <div class="collapse navbar-collapse noclear"></div>
        <div class="navbar-header pull-right">
          <% if user_signed_in? %>
            <div class="pull-right right-buttons">
                <%= link_to 'Sign out', destroy_user_session_path, method: 'delete',
                 class: 'btn btn-default navbar-btn' %>
            </div> 
            <ul class="nav navbar-nav navbar-right">
              <li><!-- link_to 'Users', users_path --></li>
            </ul>
            <% else %>
              <%= link_to 'Sign in', new_user_session_path, method: 'get',
                 class: 'btn btn-default navbar-btn' %>
          <% end %>           
        </div>
    </div>
  </nav>




	<div class="container">
		<!-- flash_messages if show_layout_flash? -->

			<%= yield %>

	</div>

</body>
</html>
